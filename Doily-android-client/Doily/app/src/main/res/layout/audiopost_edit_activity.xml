<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/audio_edit_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/back" />
        <TextView
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:text="声音文本小记"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/audio_edit_shift"
            android:layout_height="match_parent"
            android:src="@drawable/edit_shift"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="#A5C3BFBF"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/audio_edit_agoraclick">
    <ImageView
        android:layout_width="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/audio_edit_agoraimgtag"
        android:visibility="visible"
        android:src="@drawable/agoraclick"/>
        <TextView
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF38E7ED"
            android:visibility="visible"
            android:id="@+id/audio_edit_agoratext"
            android:text="点击开始录音"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:visibility="gone"
            android:id="@+id/audio_edit_playerView"
            android:minWidth="50dp"
            android:text="12"
           android:textAlignment="viewEnd"
            android:padding="8dp"
            android:background="@drawable/audioplayback"
            android:layout_height="35dp"
            android:gravity="end" />

    </LinearLayout>

    <GridView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnWidth="50dip"
        android:gravity="center"
        android:horizontalSpacing="5dip"
        android:numColumns="3"
        android:paddingTop="5dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dip"
        android:minHeight="50dip"
        android:id="@+id/audio_edit_addpng"
        />
    <TextView
        android:layout_width="match_parent"
        android:background="#A5C3BFBF"
        android:layout_marginTop="20dp"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/shape"
            android:layout_height="40dp"
            android:text="发布"
            android:id="@+id/audio_edit_publish"
            android:layout_marginRight="120dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/audio_edit_tomyself">

        <ImageView
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:id="@+id/audio_edit_tomyselftag"
            android:src="@drawable/selfselect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="仅自己可见"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>