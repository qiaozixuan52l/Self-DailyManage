<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_main"
    android:background="#FFF">
    <!-- Fragment内容显示的帧布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FF8EFAFC"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/main_more_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/setting"

            />

        <ImageView
            android:id="@+id/main_notification_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:layout_gravity="center"
            android:src="@drawable/message"

            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_tab"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/main_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_img_center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
               android:layout_gravity="center"
                android:src="@drawable/homenornal"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_addpublish"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
               android:id="@+id/main_img_add"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
               android:src="@drawable/add"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_club"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_img_club"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/club_normal"
                />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingTop="70dp" />





</RelativeLayout>